<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <div class="jumbotron bg-primary text-white p-5 rounded shadow-sm mb-4">
      <h1 class="display-5 fw-bold">
        <i class="bi bi-box-seam me-2"></i> Product Management System
      </h1>
      <p class="lead">Manage your suppliers and products efficiently</p>
    </div>

    <!-- Bộ lọc sản phẩm -->
    <form method="GET" action="/" class="row g-3 mb-4">
      <div class="col-md-4">
        <select class="form-select" name="supplier">
          <option value="">All Suppliers</option>
          <% suppliers.forEach(s => { %>
            <option value="<%= s._id %>" <%= supplierFilter == s._id.toString() ? "selected" : "" %>>
              <%= s.name %>
            </option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <input type="text" class="form-control" name="search" placeholder="Search product by name"
               value="<%= searchQuery %>">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-light w-100">
          <i class="bi bi-search"></i> Search
        </button>
      </div>
    </form>

    <!-- Danh sách sản phẩm -->
    <% if (products.length === 0) { %>
      <div class="alert alert-warning">No products found.</div>
    <% } else { %>
      <div class="row">
        <% products.forEach(p => { %>
          <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title"><%= p.name %></h5>
                <p class="card-text"><strong>Supplier:</strong> <%= p.supplier ? p.supplier.name : "N/A" %></p>
                <p class="card-text"><strong>Price:</strong> $<%= p.price %></p>
                <p class="card-text"><strong>Quantity:</strong> <%= p.quantity %></p>

                <a href="/products/<%= p._id %>" class="btn btn-outline-info btn-sm">
                  <i class="bi bi-eye"></i> View
                </a>
                <% if (user) { %>
                  <a href="/products/<%= p._id %>/edit" class="btn btn-outline-warning btn-sm">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <form method="POST" action="/products/<%= p._id %>/delete" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm"
                            onclick="return confirm('Are you sure?')">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Quản lý Suppliers -->
    <div class="mt-5">
      <h3><i class="bi bi-people"></i> Manage Suppliers</h3>
      <a href="/suppliers" class="btn btn-primary me-2">
        <i class="bi bi-list-ul"></i> View Suppliers
      </a>
      <% if (user) { %>
        <a href="/suppliers/new" class="btn btn-success">
          <i class="bi bi-plus-circle"></i> Add Supplier
        </a>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
